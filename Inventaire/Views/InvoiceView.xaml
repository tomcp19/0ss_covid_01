<UserControl x:Class="BillingManagement.UI.Views.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BillingManagement.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
           
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="6" Orientation="Horizontal" x:Name="spHeader">
                        <TextBlock Text="Liste des factures" />
                    </StackPanel>
                    <ListView Grid.Row="1" ItemsSource="{Binding Invoice}"
                          SelectedItem="{Binding SelectedInvoice}"
                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Info}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                <Grid Grid.Column="1" Margin="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{Binding ElementName=spHeader,Path=ActualHeight}"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="3">
                        <TextBlock Text="Identifiant :" Width="75"/>
                        <TextBox MinWidth="125" Text="{Binding SelectedInvoice.InvoiceId}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" Margin="3" >
                        <TextBlock Text="Prenom :" Width="75"/>
                        <TextBox MinWidth="125" Text="{Binding SelectedInvoice.Customer.FirstName}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" Margin="3" >
                        <TextBlock Text="Nom :" Width="75"/>
                        <TextBox MinWidth="125" Text="{Binding SelectedInvoice.Customer.LastName}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="0"
                            Orientation="Horizontal" Margin="3" >
                        <TextBlock Text="Sous-Total :" Width="75"/>
                        <TextBox MinWidth="175" Text="{Binding SelectedInvoice.Subtotal}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="1" 
                            Orientation="Horizontal" Margin="3">
                        <TextBlock Text="Taxe Provinciale :" Width="75"/>
                        <TextBox MinWidth="50" Text="{Binding SelectedInvoice.ProvTx}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="0" 
                            Orientation="Horizontal" Margin="3">
                        <TextBlock Text="Taxe Federale :" Width="75"/>
                        <TextBox MinWidth="125" Text="{Binding SelectedInvoice.FedTx}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="1" 
                            Orientation="Horizontal" Margin="3">
                        <TextBlock Text="Total :" Width="75"/>
                        <TextBox MinWidth="125" Text="{Binding SelectedInvoice.Total}"/>
                    </StackPanel>
                    <StackPanel/>
                    

                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
